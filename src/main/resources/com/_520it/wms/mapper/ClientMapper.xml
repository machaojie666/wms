<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com._520it.wms.mapper.ClientMapper">
	<resultMap id="SimpleResultMap" type="Client">
		<id column="id" property="id" />
		<result column="name" property="name" />
	</resultMap>

	<resultMap id="base_mapper" type="Client">
		<id column="id" property="id" />
		<result column="phone" property="phone" />
		<result column="sn" property="sn" />
		<result column="name" property="name" />
	</resultMap>
	<delete id="delete">
		delete from client where id = #{id}
	</delete>
	<insert id="save" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into
		client
		(phone,sn,name)
		values
		(#{phone},#{sn},#{name})
	</insert>
	<update id="update">
		update client
		set
		phone=#{phone},
		sn=#{sn},
		name=#{name}
		where id = #{id}
	</update>
	<select id="get" resultMap="base_mapper">
		select * from client where
		id = #{id}
	</select>
	<select id="list" resultMap="base_mapper">
		select * from client
	</select>
	<sql id="conditions_sql">
		<where>
		</where>
	</sql>
	<select id="getTotalCount" resultType="long">
		select count(*) from client
		<include refid="conditions_sql"></include>
	</select>
	<select id="getListData" resultMap="base_mapper">
		select * from client
		<include refid="conditions_sql"></include>
		limit #{beginIndex},#{pageSize}
	</select>
</mapper>